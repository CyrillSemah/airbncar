<%= form_with model: @car, local: true do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :location %>
  <%= f.text_field :location %>
  <%= f.label :capacity %>
  <%= f.number_field :capacity %>
  <%= f.label :size %>
  <%= f.select :size, ["Small", "Medium", "Large"] %>
  <%= f.label :daily_price %>
  <%= f.number_field :daily_price, step: 0.01 %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
