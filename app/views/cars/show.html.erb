<h1><%= @car.title %></h1>
<p><%= @car.description %></p>
<p>Location: <%= @car.location %></p>
<p>Capacity: <%= @car.capacity %> people</p>
<p>Daily Price: <%= number_to_currency(@car.daily_price) %></p>
<ul>
  <% @bookings.each do |booking| %>
    <li>
      From <%= booking.start_date %> to <%= booking.end_date %> - <%= booking.people %> people
      <%= link_to "Cancel", booking_path(booking), method: :delete, data: { confirm: "Are you sure?" } %>
    </li>
  <% end %>
</ul>
<h3>Make a Booking</h3>
<%= form_with model: [@car, @booking], local: true do |f| %>
  <%= f.label :start_date %>
  <%= f.date_field :start_date %>
  <%= f.label :end_date %>
  <%= f.date_field :end_date %>
  <%= f.label :people %>
  <%= f.number_field :people %>
  <%= f.submit "Book Now", class: "btn btn-primary" %>
<% end %>
