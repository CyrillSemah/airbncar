<!DOCTYPE html>
<html>
  <head>
    <title>Administration | Airbncar</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>

  <body>
    <div class="container-fluid">
      <div class="row">
        <!-- Sidebar -->
        <div class="col-md-3 col-lg-2 d-md-block bg-light sidebar collapse">
          <div class="position-sticky pt-3">
            <h6 class="sidebar-heading px-3 mt-4 mb-1 text-muted">
              <span>Administration</span>
            </h6>
            <ul class="nav flex-column">
              <li class="nav-item">
                <%= link_to admin_dashboard_path, class: "nav-link #{'active' if current_page?(admin_dashboard_path)}" do %>
                  <i class="bi bi-speedometer2"></i> Tableau de bord
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_cars_path, class: "nav-link #{'active' if controller_name == 'cars'}" do %>
                  <i class="bi bi-car-front"></i> Voitures
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_bookings_path, class: "nav-link #{'active' if controller_name == 'bookings'}" do %>
                  <i class="bi bi-calendar-check"></i> RÃ©servations
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admin_users_path, class: "nav-link #{'active' if controller_name == 'users'}" do %>
                  <i class="bi bi-people"></i> Utilisateurs
                <% end %>
              </li>
            </ul>
          </div>
        </div>

        <!-- Main content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
          <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
            <h1 class="h2"><%= yield(:title) if content_for?(:title) %></h1>
          </div>

          <% if notice %>
            <div class="alert alert-success" role="alert">
              <%= notice %>
            </div>
          <% end %>

          <% if alert %>
            <div class="alert alert-danger" role="alert">
              <%= alert %>
            </div>
          <% end %>

          <%= yield %>
        </main>
      </div>
    </div>
  </body>
</html>
