<% content_for :title, "Modifier la réservation" %>

<div class="card shadow mb-4">
  <div class="card-body">
    <%= form_with(model: [:admin, @booking], local: true) do |f| %>
      <% if @booking.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@booking.errors.count, "erreur") %> :</h4>
          <ul>
            <% @booking.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :start_date, "Date de début", class: "form-label" %>
            <%= f.date_field :start_date, class: "form-control" %>
          </div>
        </div>

        <div class="col-md-6">
          <div class="mb-3">
            <%= f.label :end_date, "Date de fin", class: "form-label" %>
            <%= f.date_field :end_date, class: "form-control" %>
          </div>
        </div>
      </div>

      <div class="mb-3">
        <%= f.label :status, "Statut", class: "form-label" %>
        <%= f.select :status, 
            ['pending', 'confirmed', 'cancelled'], 
            {}, 
            class: "form-select" %>
      </div>

      <div class="mt-4">
        <%= f.submit "Mettre à jour", class: "btn btn-primary" %>
        <%= link_to "Retour", admin_bookings_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
