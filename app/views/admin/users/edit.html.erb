<% content_for :title, "Modifier l'utilisateur" %>

<div class="card shadow mb-4">
  <div class="card-body">
    <%= form_with(model: [:admin, @user], local: true) do |f| %>
      <% if @user.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@user.errors.count, "erreur") %> :</h4>
          <ul>
            <% @user.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="mb-3">
        <%= f.label :email, class: "form-label" %>
        <%= f.email_field :email, class: "form-control" %>
      </div>

      <div class="mb-3">
        <div class="form-check">
          <%= f.check_box :admin, class: "form-check-input" %>
          <%= f.label :admin, "Administrateur", class: "form-check-label" %>
        </div>
      </div>

      <div class="mt-4">
        <%= f.submit "Mettre Ã  jour", class: "btn btn-primary" %>
        <%= link_to "Retour", admin_users_path, class: "btn btn-secondary" %>
      </div>
    <% end %>
  </div>
</div>
